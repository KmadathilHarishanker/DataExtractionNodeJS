<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Database Viewer - File Parser</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f5f5f5;
            color: #333;
        }

        .container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 20px;
        }

        .header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 30px;
            border-radius: 10px;
            margin-bottom: 30px;
            text-align: center;
        }

        .header h1 {
            font-size: 2.5em;
            margin-bottom: 10px;
        }

        .nav-links {
            margin-top: 20px;
        }

        .nav-links a {
            color: white;
            text-decoration: none;
            margin: 0 10px;
            padding: 8px 16px;
            border: 1px solid rgba(255, 255, 255, 0.3);
            border-radius: 20px;
            transition: all 0.3s;
        }

        .nav-links a:hover {
            background: rgba(255, 255, 255, 0.2);
        }

        .files-grid {
            display: grid;
            gap: 20px;
            margin-bottom: 30px;
        }

        .file-card {
            background: white;
            border-radius: 10px;
            padding: 25px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: transform 0.2s;
        }

        .file-card:hover {
            transform: translateY(-2px);
        }

        .file-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 15px;
            padding-bottom: 15px;
            border-bottom: 1px solid #eee;
        }

        .file-info h3 {
            color: #667eea;
            margin-bottom: 5px;
        }

        .file-meta {
            color: #666;
            font-size: 0.9em;
        }

        .view-btn {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            padding: 8px 16px;
            border-radius: 20px;
            cursor: pointer;
            font-size: 14px;
            transition: all 0.3s;
        }

        .view-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
        }

        .records-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 15px;
            display: none;
        }

        .records-table.show {
            display: table;
        }

        .records-table th,
        .records-table td {
            padding: 8px 12px;
            text-align: left;
            border-bottom: 1px solid #eee;
        }

        .records-table th {
            background-color: #f8f9ff;
            font-weight: bold;
            color: #667eea;
        }

        .records-table tr:hover {
            background-color: #f8f9ff;
        }

        .no-files {
            text-align: center;
            padding: 50px;
            color: #666;
        }

        .loading {
            text-align: center;
            padding: 20px;
            color: #666;
        }

        .spinner {
            border: 4px solid #f3f3f3;
            border-top: 4px solid #667eea;
            border-radius: 50%;
            width: 40px;
            height: 40px;
            animation: spin 1s linear infinite;
            margin: 0 auto 10px;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>üóÑÔ∏è Database Viewer</h1>
            <p>View all uploaded files and their stored records</p>
            <div class="nav-links">
                <a href="/">‚Üê Back to Main Dashboard</a>
                <a href="/powerbi-dashboard">Power BI Dashboard</a>
            </div>
        </div>

        <div id="filesContainer">
            <div class="loading">
                <div class="spinner"></div>
                <p>Loading uploaded files...</p>
            </div>
        </div>
    </div>

    <script>
        // Load all uploaded files
        async function loadFiles() {
            try {
                const response = await fetch('/api/uploads');
                const data = await response.json();
                const files = data.uploads || [];

                const container = document.getElementById('filesContainer');
                
                if (files.length === 0) {
                    container.innerHTML = `
                        <div class="no-files">
                            <h3>No files uploaded yet</h3>
                            <p>Upload some files to see them here</p>
                        </div>
                    `;
                    return;
                }

                container.innerHTML = `
                    <div class="files-grid">
                        ${files.map(file => `
                            <div class="file-card">
                                <div class="file-header">
                                    <div class="file-info">
                                        <h3>${file.filename}</h3>
                                        <div class="file-meta">
                                            Type: ${file.file_type.toUpperCase()} | 
                                            Records: ${file.record_count} | 
                                            Date: ${new Date(file.upload_date).toLocaleString()}
                                        </div>
                                    </div>
                                    <button class="view-btn" onclick="viewRecords('${file.table_name}', '${file.filename}')">
                                        View Records
                                    </button>
                                </div>
                                <div id="records-${file.table_name}" class="records-container"></div>
                            </div>
                        `).join('')}
                    </div>
                `;
            } catch (error) {
                console.error('Failed to load files:', error);
                document.getElementById('filesContainer').innerHTML = `
                    <div class="no-files">
                        <h3>Error loading files</h3>
                        <p>${error.message}</p>
                    </div>
                `;
            }
        }

        // View records for a specific file
        async function viewRecords(tableName, filename) {
            const recordsContainer = document.getElementById(`records-${tableName}`);
            
            // Toggle visibility
            const isVisible = recordsContainer.querySelector('.records-table')?.classList.contains('show');
            
            if (isVisible) {
                recordsContainer.innerHTML = '';
                return;
            }

            recordsContainer.innerHTML = `
                <div class="loading">
                    <div class="spinner"></div>
                    <p>Loading records...</p>
                </div>
            `;

            try {
                const response = await fetch(`/api/file/${tableName}?limit=50`);
                const data = await response.json();
                const records = data.records || [];

                if (records.length === 0) {
                    recordsContainer.innerHTML = '<p style="color: #666; text-align: center;">No records found</p>';
                    return;
                }

                // Get headers from first record
                const headers = Object.keys(records[0]).filter(key => key !== 'id');
                
                recordsContainer.innerHTML = `
                    <table class="records-table show">
                        <thead>
                            <tr>
                                ${headers.map(header => `<th>${header}</th>`).join('')}
                            </tr>
                        </thead>
                        <tbody>
                            ${records.map(record => `
                                <tr>
                                    ${headers.map(header => `<td>${record[header] || ''}</td>`).join('')}
                                </tr>
                            `).join('')}
                        </tbody>
                    </table>
                    <p style="margin-top: 10px; color: #666; font-size: 0.9em;">
                        Showing ${records.length} records (max 50). Total records: ${records.length}
                    </p>
                `;
            } catch (error) {
                console.error('Failed to load records:', error);
                recordsContainer.innerHTML = `
                    <p style="color: #d32f2f; text-align: center;">
                        Error loading records: ${error.message}
                    </p>
                `;
            }
        }

        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            loadFiles();
        });
    </script>
</body>
</html> 